<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/full_margin"
        android:layout_marginStart="@dimen/full_margin"
        android:src="@drawable/ic_label"
        app:layout_constraintBottom_toBottomOf="@+id/task_title_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/task_title_input_layout"
        app:layout_constraintVertical_bias="0.74"
        tools:layout_editor_absoluteX="16dp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/task_title_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_marginEnd="@dimen/full_margin"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="@dimen/full_margin"
        android:layout_marginStart="72dp"
        android:layout_marginTop="@dimen/full_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/task_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_title_hint" />

    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/notes_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/full_margin"
        android:layout_marginStart="@dimen/full_margin"
        android:contentDescription="sd"
        android:src="@drawable/notes_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_notes_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/task_notes_input_layout"
        app:layout_constraintVertical_bias="0.73"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/task_notes_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_title_input_layout"
        android:layout_marginEnd="@dimen/full_margin"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="@dimen/full_margin"
        android:layout_marginStart="72dp"
        android:layout_marginTop="@dimen/half_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title_input_layout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/task_notes_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_notes_hint"
            android:inputType="textMultiLine" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/full_margin"
        android:layout_marginStart="@dimen/full_margin"
        android:contentDescription="fg"
        android:src="@drawable/ic_date"
        app:layout_constraintBottom_toBottomOf="@+id/due_date_picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/due_date_picker" />

    <TextView
        android:id="@+id/due_date_picker"
        style="@style/Base.Widget.AppCompat.Spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_notes_input_layout"
        android:layout_marginEnd="@dimen/full_margin"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="30dp"
        android:hint="@string/task_due_date_hint"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_notes_input_layout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/full_margin"
        android:layout_marginStart="@dimen/full_margin"
        android:contentDescription="rt"
        android:src="@drawable/notification_small"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/notification_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_label" />

    <TextView
        android:id="@+id/notification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/due_date_picker"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="34dp"
        android:hint="@string/notification_select"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/due_date_picker" />

    <Switch
        android:id="@+id/notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/due_date_picker"
        android:layout_marginEnd="@dimen/full_margin"
        android:layout_marginRight="@dimen/full_margin"
        app:layout_constraintBottom_toBottomOf="@+id/notification_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_label"
        app:layout_constraintVertical_bias="0.4" />

    <LinearLayout
        android:id="@+id/notification_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_switch"
        android:layout_marginEnd="@dimen/full_margin"
        android:layout_marginRight="@dimen/full_margin"
        android:layout_marginStart="@dimen/full_margin"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_label">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notif_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/notification_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="ladkfjladf" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>