<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/full_margin">

    <TextView
        android:id="@+id/task_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:text="Task title:" />

    <TextView
        android:id="@+id/task_due_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_below="@id/task_title_label"
        android:text="Task due date:" />

    <TextView
        android:id="@+id/task_notes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_below="@id/task_due_label"
        android:text="Task notes:" />

    <TextView
        android:id="@+id/task_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/task_title_label"
        android:layout_toEndOf="@id/task_title_label"
        android:layout_toRightOf="@id/task_title_label"
        android:text="TextView" />

    <TextView
        android:id="@+id/task_due_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/task_due_label"
        android:layout_toEndOf="@id/task_due_label"
        android:layout_toRightOf="@id/task_due_label"
        android:text="TextView" />

    <TextView
        android:id="@+id/task_notes_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/task_notes_label"
        android:layout_toEndOf="@id/task_notes_label"
        android:layout_toRightOf="@id/task_notes_label"
        android:text="TextView" />
</RelativeLayout>