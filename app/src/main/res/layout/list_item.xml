<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_background"
    android:padding="@dimen/full_margin">

    <CheckBox
        android:id="@+id/taskCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/taskCheckbox"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="40dp"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_toEndOf="@id/taskCheckbox"
        android:layout_toRightOf="@id/taskCheckbox"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tarea 1"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textViewName"
        android:layout_alignStart="@id/textViewName"
        android:layout_below="@id/textViewName"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ellipsize="end"
        android:text="24/01/2017"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/notificationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:src="@drawable/notification"
        android:tint="@color/colorPrimaryDark"
        android:contentDescription="Notification image" />


</RelativeLayout>


